@model MyRecordCollection.Models.Artist

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <h4>@Html.DisplayNameFor(model => model.Bio)</h4>
        <hr />
        <p>@MyRecordCollection.MyHtmlHelper.DisplayLargeText(Model.Bio)</p>
        @if (Model.Albums.Count > 0)
        {
            <hr />
            <h4>My @Model.Name Albums</h4>
            <div class="row">
                @foreach (var album in Model.Albums)
                {
                    <div class="col-lg-3 col-md-4 col-xs-6">
                        <a class="thumbnail" href="@Url.Action("Details", "Albums", new { id = album.Id })" title="@Model.Name - @album.Title">
                            <img class="img-responsive" src="@album.ImageUrl" alt="@Model.Name - @album.Title">
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>
<p>
    <a href="@Url.Action("Index")" class="btn btn-default">
        <span class="glyphicon glyphicon-arrow-left"></span>Back to List
    </a>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-default">
        <span class="glyphicon glyphicon-edit"></span>Edit
    </a>
</p>



