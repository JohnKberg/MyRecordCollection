@model IEnumerable<MyRecordCollection.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Artists</h2>

<div class="panel panel-default">
    <div class="panel-heading text-right">
        <a href="@Url.Action("Create")" class="btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Create New</a>
    </div>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="clickable" onclick="window.location='@Url.Action("Details", new { id= item.Id})'">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-right">
                    <div class="btn-group" role="group" aria-label="artists toolbar">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-default">
                            <span class="glyphicon glyphicon-edit"></span>Edit
                        </a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-default">
                            <span class="glyphicon glyphicon-list-alt"></span>Details
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }

    </table>
    <div class="panel-footer"></div>
</div>


